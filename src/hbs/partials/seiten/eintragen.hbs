<div class="flex-wrapper-eintragen">
  <div class="eintragen-main"></div>
  <div class="eintragen-left aside">
    <form method="post" id="signInForm" autocomplete="off">
      <div class="form-group">
        <label for="eintragenAuto">Aushilfe:</label>
        <input type="text" class="form-control" placeholder="Name" id="eintragenAuto">
      </div>
      {{!-- <div class="form-group">
        <label for="datum">Datum:</label>
        <input type="date" class="form-control" placeholder="dd-mm-yyyy" id="datum">
      </div> --}}
      <div class="form-group zeit">
        <label for="start">Beginn:</label>
        <input type="time" class="form-control" id="start">
      </div>
      <div class="form-group" id="menge" style="display:none">
        <label for="anzahl">Einsätze:</label>
        <input type="number" class="form-control" placeholder="Anzahl" id="anzahl" value="1" min="1">
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="stationCheck">
        <label class="form-check-label" for="stationCheck">Aus anderer Station</label>
      </div>
      <div class="form-check" id="ndCheckContainer">
        <input type="checkbox" class="form-check-input" id="ndCheck">
        <label class="form-check-label" for="ndCheck">Notdienst</label>
      </div>
      <input type="submit" class="btn scc mt-3" value="Anmelden" id="signIn">
      <input type="button" class="btn scc mt-3" value="Vorschau" id="ndPreview" style="display:none">
    </form>
  </div>
  <div class="eintragen-right aside">
    <div class="form-group" style="display:none" id="endGroup">
      <label class="mr-3" for="end">Ende:</label>
      <input type="time" class="form-control" id="end">
    </div>
    <div class="preview"></div>
    <div id="delete" style="display:none">Anmeldung löschen</div>
    <input type="button" class="btn scc" id="confirm" style="display:none">
  </div>
</div>